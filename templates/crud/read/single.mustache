<div class="row">
    <div class="span10"><h3>{{model_pretty}} Details</h3></div>
    <div class="span2"><a href="/crud/read/{{model}}" class="btn btn-mini btn-primary pull-right">Back to {{model_plural}}</a></div>
</div>
<div class="row">
    <div class="span12">
        <table class="table table-striped">
            <tbody>
            {{#columns}}
            <tr>
                <td>{{column}}</td>
                <td>{{{value}}}</td>
            </tr>
            {{/columns}}
            </tbody>
        </table>
    </div>
</div>

<ul class="nav nav-tabs" id="myTab">
    {{#has_many}}
    <li><a href="#children-{{{title}}}" id="tab-{{{title}}}" data-toggle="tab">{{{title}}}</a></li>
    {{/has_many}}
</ul>

<div class="tab-content">
    {{#has_many}}
    <div class="tab-pane" id="children-{{{title}}}">{{{data}}}</div>
    {{/has_many}}
</div>

